<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/soundtext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/sp_14"
        android:text="系统消息"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="#333333"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/soundrecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/soundtext"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_5"/>
    <ImageView
        android:id="@+id/soundimage"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:src="@drawable/idea_activity_back"/>
    <RadioGroup
        android:id="@+id/soundRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/soundRb1"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/attenrutton"
            android:layout_marginRight="@dimen/dp_30"
            android:textColor="@drawable/cinema_text_color"
            android:text="1"/>
        <RadioButton
            android:id="@+id/soundRb2"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_30"
            android:checked="false"
            android:background="@drawable/attenrutton1"
            android:textColor="@drawable/cinema_text_color"
            android:text="2"/>
        <RadioButton
            android:id="@+id/soundRb3"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_30"
            android:checked="false"
            android:background="@drawable/attenrutton1"
            android:textColor="@drawable/cinema_text_color"
            android:text="3"/>
    </RadioGroup>
</RelativeLayout>