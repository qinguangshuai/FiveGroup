<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/my_background"
    >
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/my_icon_remind_default_hdpi"
        android:id="@+id/my_sound"
         android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_centerInParent="true"
        android:src="@drawable/touxiang"
        android:id="@+id/my_touxiang"
        fresco:roundAsCircle="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="冬天来了"
        android:textColor="#fff"
        android:textSize="@dimen/dp_20"
        android:id="@+id/my_name"/>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:orientation="vertical"
        android:background="@drawable/my_shape"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="@dimen/dp_24">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_feedback_default_hdpi"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center"
                android:id="@+id/my_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:textColor="#222"
                android:textSize="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/my_shape"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="@dimen/dp_24">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_30">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/my_icon_attention_default_hdpi"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/my_love"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#222"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/my_icon_rccord_default_hdpi"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/my_message"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购票记录"
                    android:textColor="#222"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center"/>
            </LinearLayout>
            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/my_shape"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/my_shape"
            android:layout_marginTop="@dimen/dp_30"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/my_icon_feedback_default_hdpi"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/my_opinion"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textColor="#222"
                    android:layout_marginTop="@dimen/dp_10"
                   android:layout_gravity="center"
                    android:textSize="@dimen/dp_12"
                   />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/my_shape"
            android:layout_marginTop="@dimen/dp_30"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_54"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/my_icon_version_default_hdpi"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/my_new"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新版本"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#222"
                    android:layout_marginTop="@dimen/dp_10"
                  android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="©八维移动通信学院毕业作品"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/dp_14"/>


</LinearLayout>
