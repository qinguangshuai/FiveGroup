<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowActivity">

    <com.bw.movie.custom.CustomViewpager
        android:id="@+id/vp_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></com.bw.movie.custom.CustomViewpager>

    <RadioGroup
        android:id="@+id/rg_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:layout_gravity="center"
            android:id="@+id/film_show"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"

            android:background="@drawable/film_selector"
            android:button="@null"

            android:gravity="center" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Space>

        <RadioButton
            android:id="@+id/cinema_show"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/cinema_selector"
            android:button="@null"
            android:gravity="center"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>
        <RadioButton
            android:id="@+id/my_show"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/my_selector"
            android:button="@null"
            android:gravity="center"
            />
    </RadioGroup>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->

        <!--android:layout_alignParentBottom="true"-->
        <!--&gt;-->
        <!---->
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_15"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_0"
            android:id="@+id/image_populer"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_2"

            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/ren4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_marginRight="@dimen/dp_15"
        >
        <ImageView
            android:id="@+id/lingdai"

            android:layout_marginTop="@dimen/dp_28"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"

            android:src="@mipmap/lingdai2"/>
    </LinearLayout>
</RelativeLayout>