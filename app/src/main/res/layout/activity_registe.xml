<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/v2_pjcyk1"
    android:orientation="vertical"
    tools:context=".registe.RegisteActivity">

    <TextView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/registetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ffanhui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_register_name"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="135dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/register_icon_name_default_hdpi"
            android:ems="10"
            android:hint="     昵称"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:id="@+id/et_register_sex"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_register_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/register_icon_sex_default_hdpi"
            android:ems="10"
            android:hint="       性别"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:id="@+id/et_regsiter_date"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_register_sex"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/register_icon_date_default_hdpi"
            android:ems="10"
            android:hint="      出生日期"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:id="@+id/et_register_phone"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_regsiter_date"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/register_icon_phone_default_hdpi"
            android:ems="10"
            android:hint="      手机号"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:id="@+id/et_register_email"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_register_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/register_icon_mail_default_hdpi"
            android:ems="10"
            android:hint="      邮箱"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:id="@+id/et_register_password"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_register_email"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/register_icon_lock_default_hdpi"
            android:ems="10"
            android:hint="      登录密码"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <Button
            android:id="@+id/button"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="180dp"
            android:background="@drawable/shapcolor"
            android:text="注册"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>