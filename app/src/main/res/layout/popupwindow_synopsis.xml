<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shapebackground"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back_pop_synopsis"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="right"
        android:src="@mipmap/com_icon_down_default_hdpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="影评"
        android:textSize="18sp" />

    <TextView
        android:layout_width="@dimen/dp_25"
        android:layout_height="3dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/shapescrollbar" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Recyclerview_pop_synopsis"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/writemessage"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"

        android:src="@mipmap/com_icon_publish_default_hdpi"/>
</RelativeLayout>





</LinearLayout>
