<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/v2_pjcyk1"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <TextView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/login_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ffanhui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginedit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawableLeft="@drawable/register_icon_phone_default_hdpi"
            android:drawablePadding="@dimen/dp_25"
            android:hint="手机号"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_20"
            android:theme="@style/MyEditText" />

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/loginedit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:drawableLeft="@drawable/register_icon_lock_default_hdpi"
                android:drawablePadding="@dimen/dp_25"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/sp_20"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_35"
                android:src="@drawable/log_icon_eye_default_hdpi" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/loginbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15"
                android:theme="@style/MyCheckBox" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/remeberbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:text="自动登录"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15"
                android:theme="@style/MyCheckBox" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/logintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="快速注册"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_80"
            android:background="@drawable/shapcolor"
            android:text="登录"
            android:textColor="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="----------第三方账号快捷登录----------"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/loginimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/log_icon_weixin_default_hdpi" />
    </LinearLayout>
</RelativeLayout>