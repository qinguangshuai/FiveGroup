<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".film.activity.DetailsActivity">

    <!-- 影片详情 -->

    <LinearLayout
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:layout_margin="@dimen/dp_6"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_24"
            android:button="@mipmap/dingwei"
            android:padding="@dimen/dp_5"
            android:text="北京"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RadioGroup
        android:layout_margin="@dimen/dp_6"
        android:background="@null"
        android:id="@+id/rg_datails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_hot"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/selectbutton"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@drawable/selectortext"
            android:button="@null"
            android:textSize="@dimen/sp_14"
            android:text="热门电影"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbtn_paly"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/selectbutton"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@drawable/selectortext"
            android:button="@null"
            android:textSize="@dimen/sp_14"
            android:text="正在热映"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbtn_sugu"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/selectbutton"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:textColor="@drawable/selectortext"
            android:button="@null"
            android:textSize="@dimen/sp_14"
            android:text="即将上映"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>


    <com.bw.movie.custom.CustomViewpager
        android:id="@+id/vp_datails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.bw.movie.custom.CustomViewpager>


</LinearLayout>