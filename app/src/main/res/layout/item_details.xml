<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_12"
    android:clipChildren="false"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_327"
        android:layout_height="@dimen/dp_149"
        android:background="@mipmap/detailsbackground"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/SimpleDraweeView_detaitem"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_158"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="-40dp"
            android:clipChildren="false"
            fresco:roundedCornerRadius="@dimen/dp_10"
            fresco:roundingBorderColor="#f4f4f4"
            fresco:roundingBorderWidth="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_detaitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="铁血战士"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/hart_detaitem"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/selectcollection"
                    android:button="@null" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Introduction_detaitem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:text="铁血战士"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </ScrollView>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>



