<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bigbackground"
    tools:context=".film.synopsis.activity.SynopsisActivity"
    >


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/background_synopsis"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_28"
            android:background="@null">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:button="@mipmap/com_icon_movie_default_xxhdpi"
                android:paddingLeft="5dp"
                android:text="电影详情"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/hart_synopsis"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/selectcollection"
                android:button="@null" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="铁血战士"
            android:textColor="#fff"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />

        <com.dak.weakview.layout.WeakCardOverlapLayout
            android:id="@+id/card_synopsis"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_310"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:padding="@dimen/dp_10">

        </com.dak.weakview.layout.WeakCardOverlapLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"

            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rb_Datail_synopsis"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_35"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/shaperb"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="详情"
                android:textColor="#fff" />

            <Button
                android:id="@+id/rb_Trail_synopsis"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_35"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/shaperb"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="预告"
                android:textColor="#fff" />

            <Button
                android:id="@+id/rb_Stills_synopsis"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_35"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/shaperb"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="剧照"
                android:textColor="#fff" />

            <Button
                android:id="@+id/rb_Review_synopsis"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_35"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/shaperb"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="影评"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagereturnsynopsis"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_margin="@dimen/dp_10"
                android:alpha="1"
                android:src="@drawable/idea_activity_back"

                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buy_synopsis"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/shapebuy"
                    android:text="购票"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>